% Define com-color (color of the TU/e logo). Can be changed to drastically change the look of the template
\definecolor{com-color}{RGB}{31, 158, 137}

% All of the following code can be removed to be left with (close to) default LaTeX behaviour. 

% Sets up hyperlinks in the document to be colored
\hypersetup{
    colorlinks=true,
    linkcolor=com-color,
    urlcolor=com-color,
    citecolor = com-color
    }
\urlstyle{same} % Defines settings for link and reference formatting



% Change bullet style for level 1, 2 and 3 respectively for itemize
\renewcommand{\labelitemi}{\scriptsize\textcolor{com-color}{$$\blacksquare$$}}% level 1
\renewcommand{\labelitemii}{\scriptsize\textcolor{com-color}{$$\square$$}}% level 2
\renewcommand{\labelitemiii}{\textcolor{com-color}{$$\circ$$}}% level 3

% \renewcommand{\labelitemi}{\small\textcolor{com-color}{\ding{70}}} % level 1
% \renewcommand{\labelitemii}{\small\textcolor{com-color}{\ding{71}}}% level 2
% \renewcommand{\labelitemiii}{\tiny\textcolor{com-color}{\ding{71}}}% level 3

% Change bullet style for level 1, 2 and 3 respectively for enumerate
\renewcommand{\labelenumi}{\textbf{\textcolor{com-color}{\arabic*.}}}% level 1
\renewcommand{\labelenumii}{\textbf{\textcolor{com-color}{[\alph*]}}}% level 2
\renewcommand{\labelenumiii}{\textbf{\textcolor{com-color}{\roman*.}}}% level 3

% Have reference labels be linked to section (section 3 will have fig. 3.1 etc.)
\counterwithin{equation}{section} % For equations
\counterwithin{figure}{section} % For figures
\counterwithin{table}{section} % For tables

% Creates a beautiful header/footer
\pagestyle{fancy}
\lhead{\includegraphics[height = 24pt]{_extensions/bbPDF/partials/Figures/0. General/bb_logo.png}}
\rhead{$myreport.title$}
\renewcommand{\footrulewidth}{0.4pt}
\cfoot{Page \thepage}

% Formats section, subsection and subsubsection titles respectively 
\titleformat{\section}{\sffamily\color{com-color}\Large\bfseries}{\thesection\enskip\color{gray}\textbar\enskip}{0cm}{} % Formats section titles

\titleformat{\subsection}{\sffamily\color{com-color}\large\bfseries}{\thesubsection\enskip\color{gray}\textbar\enskip}{0cm}{} % Formats subsection titles

\titleformat{\subsubsection}{\sffamily\color{com-color}\bfseries}{\thesubsubsection\enskip\color{gray}\textbar\enskip}{0cm}{} % Formats subsubsection titles

% Formats captions
\DeclareCaptionFont{com-color}{\color{com-color}}
\captionsetup{labelfont={com-color,bf}}

% Use lato font package for section headings
\usepackage[defaultsans]{lato}

% Use opensans font package for the body text
\usepackage[default,scale=0.95]{opensans}
% \renewcommand{\mddefault}{l}
% Customize section headings' font styles
\usepackage{titlesec}
\titleformat*{\section}{\Large\fontseries{l}\selectfont
\sffamily}
\titleformat*{\subsection}{\large\fontseries{l}\selectfont
\sffamily}
\titleformat*{\subsubsection}{\normalsize\fontseries{l}\selectfont
\sffamily}


% Removes indent when starting a new paragraph
\setlength\parindent{0pt}

% Limits the ToC to sections and subsections (no subsubsec.)
\setcounter{tocdepth}{2}

%% Save the class definition of \subparagraph
\let\llncssubparagraph\subparagraph
%% Provide a definition to \subparagraph to keep titlesec happy
\let\subparagraph\paragraph
%% Load titlesec
%% Revert \subparagraph to the llncs definition
\let\subparagraph\llncssubparagraph
